extends root_layout 

block root_content
  if files.length != 0
    p Welcome, #{currentUser.username}!
  else
    .no-files-main
      .no-files-dialog 
        p You currently have no files or folders stored here.
        nav 
          ul
            li 
              a(href="upload-file") Upload a file 
            li 
              a(href="create") Create a new folder